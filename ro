import numpy as np
import pandas as pd
import folium as fo
map=fo.Map()
roCities=pd.read_csv("ro.csv")
lat_ro=list(roCities['lat'])
lon_ro=list(roCities['lng'])
name_ro=list(roCities['city'])
pop_ro=list(roCities['population'])
ro=fo.FeatureGroup(name="Romania Map")
def mar(popu):
    if popu>8000:
        return "red"
    elif popu>4000 and popu<=8000:
        return "blue"
    else:
        return "green"
for lat,lon,name, pop in zip(lat_ro, lon_ro, name_ro, pop_ro):
    ro.add_child(fo.Marker(location=[lat,lon], popup=[pop,name], icon=fo.Icon(color=mar(pop))))
map.add_child(ro)
